<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />

            <padding android:left="4.5px"
                android:top="4.5px"
                android:right="4.5px"
                android:bottom="4.5px"/>

            <solid android:color="#272727"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />

            <padding android:left="6.5px"
                android:top="6.5px"
                android:right="6.5px"
                android:bottom="6.5px"/>

            <solid android:color="#ffffff"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient android:startColor="#1BCEDF"
                android:endColor="#4169A3"
                android:angle="-90"/>

        </shape>
    </item>


</layer-list>